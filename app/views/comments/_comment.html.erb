<div class="commentbox" id=<%= "c#{comment.pid}"%>>
  <div class="comment">
  <h3><%= comment.url.nil? ? h(comment.name) : link_to(h(comment.name), comment.url) %></h3>
  <p class="commentinfo"><%= time_ago_in_words(comment.created_at) %> ago</p>
    <%= comment.content.html_safe %>
    <div class="reply" id=<%= "r#{comment.pid}" %>>
      <%= render :partial => 'comments/reply', :locals => { :comment => comment }  %>
    </div>
  </div>
</div>