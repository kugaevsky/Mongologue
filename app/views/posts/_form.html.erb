<div id="postform">
<%= form_for(@post, :remote => true) do |f| %>
  <%= render "shared/error_messages", :object => @post %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, :rows => 20 %>
  </div>
  <div class="field">
    <%= f.label "Tags" %><br />
    <%= f.text_field :tags_helper %>
  </div>
  <div class="actions">
    <%= f.submit %>
    <% unless @post.new_record? %>
      <%= link_to "Cancel", @post, :remote => true %>
    <% end %>
  </div>
<% end %>
</div>
