$('<% @posts.each do |post| %>\
    <%= cache(:action => "index", :id => post.id) do %>\
       <%= escape_javascript render post %>\
       <div id=<%= "pc#{post.pid}" %> style="display: none;" ></div>\
    <% end %>\
  <% end %>').appendTo("#posts").hide().slideDown();
$('#paginator').html('<%= escape_javascript(link_to_next_page(@posts, "MORE POSTS", :remote => true)) %>');
