<% if authorized_admin? %>
  <p>User has password(nil): <%= current_user.encrypted_password.nil? %></p>
  <div id="newpostbutton"><p>NEW POST</p></div>
  <div id="newpostbox" class="postbox" style="display:none;">
    <%= render :partial => 'admin/posts/form' %>
  </div>
<% end %>
<div id="posts">
  <div id="firstpost"></div>
  <% @posts.each do |post| %>
    <%= cache(:action => "index", :id => post.pid) do %>
       <%= render post %>
       <div id=<%= "pc#{post.pid}" %> style="display: none;" ></div>
    <% end %>
  <% end %>
</div>
<div id="up" class="bottombutton">
  <%= link_to_function "&uarr; UP &uarr;".html_safe,
                     "$( 'html, body' ).animate( { scrollTop: 0 }, 'slow' );" %>
</div>
<div id="paginator" class="bottombutton">
  <%= link_to_next_page(@posts, "&darr; MORE POSTS &darr;".html_safe, :remote => true ) %>
</div>