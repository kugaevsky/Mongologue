$('<%= "#pc#{@post.pid}" %>').hide().html("<%= escape_javascript(render('posts/comments')) %>").slideDown()
$('<%= "#showc#{@post.pid}" %>').replaceWith("<%= escape_javascript(link_to "Comments: #{@post.comments_counter.to_i}", collapse_comments_post_path(@post), :remote => true, :id => "showc#{@post.pid}") %>")
