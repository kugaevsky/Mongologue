<% store_location %>
<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag 'custom', :media => 'screen' %>
  <%= javascript_include_tag 'jquery-1.6.min', 'rails', 'application' %>

  <%= csrf_meta_tag %>
<script type="text/javascript">
$(document).ready(function() {
    $('#tagsbutton22')
        .hover(function() {
            $(this).animate({ fontSize: "120%" }, 'fast');
        }, function() {
            $(this).animate({ fontSize: "100%" }, 'fast');
        });
});
</script>
</head>
<body>
<div id="wrapper">
  <div id="header">
    <div id="logo">
      <h1><%= link_to "Mongologue", root_path %></h1>
      <p id="notice"><%= notice %></p>
    </div>
    <div id="clientinfo">
      <% if signed_in? %>
        <p>Hello, <%= "master" if current_user.admin? %>
           <%= link_to identity_or_name(current_user), current_user.identity %> |
           <%= link_to "Sign out", signout_path, :method => :delete %></p>
      <% else %>
        <p><%= loginza_button_tag("Sign in",
                              'http://'+request.env["HTTP_HOST"]+signin_path+'?return_to='+
                              request.fullpath) %></p>
      <% end %>
    </div>
  </div>
  <div id="container">
    <div id="content">
      <%= yield %>
    </div>
    <div id="side-b">
      <div id="site_info">
        <% if controller.action_name == "index" %>
          <p>Posts: <span id="postscounter"><%= "#{@posts.count}" %>
          <% if authorized_admin? %>
             | <%= link_to 'New post', new_post_path, :id => "newpostlink", :remote => true %>
          <% end %>
          </p>
        <% end %>
      </div>
      <div id="tagsbutton">
         <p>
          <%= link_to_function "Tags", '$("#tagscloud").slideToggle();' %></p></div>
      <% cache('tagscloud') do %>
      <div id="tagscloud" style="display: none;" ><%= tags_cloud.html_safe %></div>
      <% end %>
    </div>
  </div>
  <div id="footer">
    FOOTER
  </div>
<%= debug(params) if Rails.env.development? %>
</div>
</body>
</html>

